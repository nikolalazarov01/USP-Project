@model USP_Project.Web.Models.Cars.CreateCarInputModel

@{
    ViewData["Title"] = "Add Car";
}

<h2>Add New Car</h2>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="BrandId" class="control-label"></label>
        <select asp-for="BrandId" asp-items="@(new SelectList(Model.Brands, "Value", "Text"))" class="form-control"></select>
        <span asp-validation-for="BrandId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ModelId" class="control-label"></label>
        <select asp-for="ModelId" asp-items="@(new SelectList(Model.Models, "Value", "Text"))" class="form-control"></select>
        <span asp-validation-for="ModelId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Extras" class="control-label"></label>
        <select asp-for="Extras" asp-items="@(new SelectList(Model.Extras, "Value", "Text"))" multiple class="form-control"></select>
        <span asp-validation-for="Extras" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>